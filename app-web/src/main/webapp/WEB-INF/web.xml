        <!--<url-pattern>/*</url-pattern>-->
    <!--</filter-mapping>-->

    <!--<listener>-->
    <!--<listener-class>whpe.listener.ApplicationContextListener</listener-class>-->
    <!--</listener>-->

    <session-config>
        <!-- session 8小时超时 -->
        <session-timeout>480</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>
